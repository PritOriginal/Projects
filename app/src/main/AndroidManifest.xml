<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projects">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.example.projects.TestActivity"
            android:label="@string/test"
            android:theme="@style/AppTheme.NoActionBar"
            >
        </activity>
        <activity
            android:name="com.example.projects.ProjectMentorActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/info_project"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.projects.Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.projects.ComponentsInfo"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/info_component"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.projects.ProjectActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/info_project"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.projects.LoginActivity"
            android:label="@string/login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.projects.Main"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.projects.AddComponent"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_add_component"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.projects.EditProject"
            android:label="@string/edit_project"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.projects.CreateProject"
            android:label="@string/create_project"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.projects.MainActivity" />
        <activity
            android:name="com.example.projects.ProfileActivity"
            android:label="@string/profile_student"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>