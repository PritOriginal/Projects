<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/object"
            android:padding="8dp">

            <ImageView
                android:id="@+id/teammate_kvant"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/it_kvantum" />

            <TextView
                android:id="@+id/teammate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@+id/teammate_kvant"
                android:text="Махнатеев Степан"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/teammate_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teammate_name"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/teammate_kvant"
                android:text="Программист" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>